{
    "name": "bmwsly/mondial-relay-api",
    "description": "Laravel package for Mondial Relay API integration focused on the essential features for your ecommerce website",
    "type": "library",
    "autoload": {
        "psr-4": {
            "Bmwsly\\MondialRelayApi\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bmwsly\\MondialRelayApi\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Bryan M",
            "email": "contact@virage-numerique.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^9.0|^10.0|^11.0|^12.0",
        "ext-soap": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0|^11.0",
        "orchestra/testbench": "^8.0|^9.0|^10.0",
        "mockery/mockery": "^1.5",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Bmwsly\\MondialRelayApi\\MondialRelayServiceProvider"
            ],
            "aliases": {
                "MondialRelay": "Bmwsly\\MondialRelayApi\\Facades\\MondialRelay",
                "MondialRelayService": "Bmwsly\\MondialRelayApi\\Facades\\MondialRelayService"
            }
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "check-style": "php-cs-fixer fix --dry-run --diff",
        "fix-style": "php-cs-fixer fix",
        "quality": [
            "@check-style",
            "@test"
        ]
    },
    "minimum-stability": "stable"
}
